{
    "import_sample_data":{
        "xlsx":"sample_data/sample_data.xlsx",
        "columns_factor":{
            "Genotype":["WT","KO"],
            "Cage":["Cage A","Cage B","Cage WT","Cage KO"]
        },
        "transform_ps_sample_names":{
            "Get rid of date":{
                "Before":"[.]16S[.]03022021",
                "After":""
            },
            "Replace dot with dash":{
                "Before":"[.]",
                "After":"-"
            }
        },
        "transform_mapping_file_sample_names":{
        }
    },
   "phyloseq_rds_file":"../RData/ps_RTX-090.rds",
   "sample_subsets":{
    "all":"TRUE"
   },
   "min_reads":10000,
   "pcoa_plots":{
       "all_samples":{
           "sample_subset":"all",
           "color_variable":"Genotype",
           "shape_variable":"Cage",
           "hover_variables":["Sex"],
           "PERMANOVA":"~Cage+Genotype",
           "PERMANOVA_permutations":100000,
           "PDF_height":4.5,
           "PDF_width":6
        }
   },
   "taxonomy_barplots":{
       "all_samples":{
           "sample_subset":"all",
           "facet_variable":"Genotype",
           "n_labelled_taxa":8,
           "PDF_height":4.5,
           "PDF_width":7
       }
   },
   "alpha_diversity":{
       "all_samples":{
           "sample_subset":"all",
           "x_variable":"Genotype",
           "PDF_height":4.5,
           "PDF_width":6
       }
   },
   "prefilters":{
       "100_reads_20_percent":{
           "long_name":"Keep OTUs having at least 100 reads in at least 20% of samples.",
           "prefilter_function":"function(dds) dds[rowSums(counts(dds)>99) > 0.2*ncol(counts(dds)),]"
       }
   },
   "differential_abundance":{
       "KO_vs_WT":{
           "sample_subset":"all",
           "prefilter":"100_reads_20_percent",
           "design":"~Genotype",
           "attribute":"Genotype",
           "group1_plus":"KO",
           "group2_minus":"WT"
       },
       "KO_vs_WT_cage_covariate":{
           "sample_subset":"all",
           "prefilter":"100_reads_20_percent",
           "design":"~Genotype+Cage",
           "attribute":"Genotype",
           "group1_plus":"KO",
           "group2_minus":"WT"
       }
   }
}
